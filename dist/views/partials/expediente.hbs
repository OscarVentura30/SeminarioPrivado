                        <img src="/icon/vacio.png" alt="" width="40vh" id="estadoArchivoDiploma">
                        <button type="button" class="btn btn-primary" onclick="descargarArchivo(2)" disabled id="boton2">Descargar</button>
                    </div>
                </div>
            </div>
          </div>

          <div class="row">
