<div class="modal modal-xl fade" id="modalModificar" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" >
  <div class="modal-dialog" >
    <div class="modal-content">
      <div class="modal-header" style="background-color: blue; color: white">
        <h5 class="modal-title" id="exampleModalLabel">Getion de Documentos</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="row">
            <label for="idUsuario" class="col-form-label" hidden>id</label>
            <input type="numeric" class="form-control" id="idUsuario" name="idUsuario" hidden>
          </div>
          
          <div class="row">
                <div class="col">
                    <label for="DPI" class="form-label">DPI</label>
                    <input type="file" class="form-control" id="DPI" name="DPI" onchange="activarBoton(1)">   
                </div>
                <div class="col">
                    <div class="row">
                        <div class="col">
                            <br>
                            <div class="spinner-border text-success" role="status" style="visibility: hidden;" id="spinerDPI">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <button type="button" class="btn btn-success" onclick="cargarArchivo(1)" id="guardar1" disabled>Guardar</button>
                             <img src="/icon/vacio.png" alt="" width="40vh" id="estadoArchivoDPI">
                            <button type="button" class="btn btn-primary" onclick="descargarArchivo(1)" disabled id="boton1">Descargar</button>
                           
                        </div>
                    </div>
                </div>
          </div>

          <div class="row">
            <div class="col">
                 <label for="diploma" class="form-label">Diploma</label>
