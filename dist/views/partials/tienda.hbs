<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tienda de Productos</title>
    <style>
        /* Estilos anteriores... */

        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #007BFF;
            color: #fff;
            padding: 20px;
            text-align: center;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        nav {
            background-color: #333;
            color: #fff;
        }

        ul.navbar {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            justify-content: flex-start;
        }

        .navbar li {
            margin-right: 20px;
        }

        .navbar a {
            text-decoration: none;
            color: #fff;
            font-weight: bold;
        }

        .navbar a:hover {
            text-decoration: underline;
        }

        /* Estilos para el contenido de la página */
        .content {
            background-color: #fff;
            padding: 20px;
        }

        /* Estilos para la sección de productos */
        .products {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .product {
            background-color: #fff;
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 20px;
            margin-bottom: 20px;
            width: calc(33.33% - 20px);
            box-sizing: border-box;
        }

        .product img {
            max-width: 100%;
            height: auto;
        }

        .product h3 {
            font-size: 18px;
            margin: 10px 0;
        }

        .product p {
            font-size: 14px;
        }

        /* Estilos para el buscador */
        .search-container {
            margin-top: 20px;
            text-align: center;
        }

        select {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
    </style>
    <script>
    // Función para obtener y mostrar los productos desde la API
    function obtenerProductos() {
        // URL de la API de ejemplo (JSONPlaceholder)
        const apiUrl = '/productos';

        // Contenedor donde se mostrarán los productos
        const productsContainer = document.querySelector('.products');

        // Realizar una solicitud GET a la API
        fetch(apiUrl)
            .then(response => response.json())
            .then(data => {
                // Limpiar el contenedor de productos
                productsContainer.innerHTML = '';

                // Iterar a través de los datos de la API y crear elementos para cada producto
                data.forEach(product => {
                    const productDiv = document.createElement('div');
                    productDiv.classList.add('product');
                    productDiv.innerHTML = `
                        <h3>${product.nombreProducto}</h3>
                        <p>${product.descripcionProducto}</p>
                    `;
                    productsContainer.appendChild(productDiv);
                });
                console.log(data);
            })
            .catch(error => {
                console.error('Error al obtener los productos:', error);
            });
    }

    // Llamar a la función para obtener y mostrar los productos cuando la página cargue
    window.onload = obtenerProductos;
</script>

</head>
<body>
    <header>
        <div class="container">
            <h1>Tienda de Productos</h1>
        </div>
    </header>

    <nav>
        <div class="container">
            <ul class="navbar">
                <li class="menu-item"><a href="/menu">Inicio</a></li>
                <li class="menu-item"><a href="#">Productos</a></li>
                <li class="menu-item"><a href="#">Acerca de</a></li>
                <li class="menu-item"><a href="#">Contacto</a></li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <div class="content">
            <h2>Productos Destacados</h2>

            <!-- Buscador por categoría -->
            <div class="search-container">
                <label for="categoria">Filtrar por categoría:</label>
                <select id="categoria">
                    <option value="todos">Todos</option>
                    <option value="electronica">Electrónica</option>
                    <option value="ropa">Ropa</option>
                    <option value="hogar">Hogar</option>
                    <!-- Puedes agregar más opciones de categoría aquí -->
                </select>
            </div>

            <div class="products">
                
                <!-- Puedes agregar más productos aquí -->
            </div>
        </div>
    </div>
</body>
</html>
