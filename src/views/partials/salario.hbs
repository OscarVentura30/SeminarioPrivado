</head>
<body>
    <header>
        {{> navbar1 }}
    </header>

    <main>
        <div class="container-fluid">
                <div class="row" >
                <div class="col-md-2">
                    {{> sideBar1 }}
                <div class="col-md-9" id="Contenido">
                    <br>
                    <h3>Salario de Usuarios</h3>
                    <hr>
                    <br>
                    <table id="tablaSalario" class="table table-striped" style="width:100%">
                        <thead>
                            <tr class="table-dark">
                            <th scope="col" >ID</th>
                            <th scope="col" >Empleado</th>
                            <th scope="col">ordinario</th>
                            <th scope="col">ExtraOrdinario</th>
                            <th scope="col">Anticipo</th>
                            <th scope="col">bono14</th>
                            <th scope="col">Aguinaldo</th>
